body {
    font-size: 14px;
    font-family: system-ui;
    line-height: 1.42857143;
    -webkit-font-feature-settings: "liga" on, "calt" on;
    -webkit-font-smoothing: subpixel-antialiased;
    text-rendering: optimizeLegibility;
    letter-spacing: 0;
}

h1, h2, h3, h4, h5, h6 { break-after: avoid-page; break-inside: avoid; orphans: 4; }
h1 { font-size: 2rem; }
h2 { font-size: 1.6rem; }
h3 {font-size: 1.4rem;}
h4 {font-size: 1.2rem;}
h5 {font-size: 1rem;}
h6 {font-size: 1rem;}
h1, h2, h3, h4, h5, h6 {border-bottom: 0px;}

main.page > .theme-default-content{
    max-width: 80%;
    padding-top: 50px;
    padding-left: 15px;
    padding-right: 15px;
    color: #333333;
}
main.page > .page-nav{
    max-width: 80%;
    padding-left: 15px;
    padding-right: 15px;
}
main.page > .theme-default-content span.badge{
    margin: 0;
}


.navbar > .links .nav-link{
    font-weight: bold;
    font-size: 16px;
    line-height: 1;
    border: 0 !important;
    margin: 0 !important;
    transition: all ease .15s;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
}


.navbar .nav-item .nav-link.router-link-active {
    color: #2ca37d;
}

// 关闭搜索栏
.navbar .links .search-box {
    display: none;
}

// 关闭尾部导航
.page-nav .inner {
    display: none;
}

// sidebar
.sidebar {
    border-right: 3px solid #2c3e50;
    width: 21rem;
}


table {
    border-collapse: collapse;
    border-spacing: 1px;
    width: 100%;
    overflow: auto;
    break-inside: auto;
    text-align: left;
    display: table;
    margin: 0.5rem 0px;
}


table thead {
    background-color: #f6f8fa;
}

table th {
    border: 0.1em solid #dfe2e5;
    border-bottom: 0;
    margin: 0;
    padding: 6px 13px;
}


table tr {
    border-top: 0.1em solid #dfe2e5;
    margin: 0;
    padding: 0;
}

table td {
    border: 0.1em solid #dfe2e5;
    margin: 0;
    padding: 6px 13px;
}


// 调整代码块UI
div[class*="language-"].line-numbers-mode::after {
    width: 2rem;
}

div[class*="language-"].line-numbers-mode .line-numbers-wrapper {
    width: 2rem;
    padding: 0.75rem 0;
}

.theme-default-content pre, .theme-default-content pre[class*="language-"] {
    padding: 0.75rem 1.5rem;
    margin: 0.5rem 0;
}

div[class*="language-"].line-numbers-mode pre {
    padding-left: 2.75rem;
}


div[class*="language-"]::before {
    color: rgb(0 245 255);
}

div[class*="language-"] .highlight-lines {
    padding-top: 0.8rem;
}


.theme-default-content:not(.custom) > h1:first-child {
    text-align: center;
}

li p {
    margin: 0.5rem 0px;
}

ul, ol {
    margin: 0.5rem 0px;
}

ol li {
    margin: 0.5rem 0px;
}

div[class*="language-"].line-numbers-mode .highlight-lines .highlighted:before {
    width: 2rem;
}

.theme-default-content code {
    background-color: #fff5f5;
    color: #d63200;
}

a, p a code {
    color: #005dff;
}

p, ul, ol, dl, table {
    margin: 0.8em 0;
}

p, ul, ol {
    line-height: 1.42857143
}